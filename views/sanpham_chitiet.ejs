<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi tiết sản phẩm</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        :root {
            --neon-green: #39FF14;
            --neon-aqua: #00FFFF;
            --neon-purple: #DA70D6;
            --dark-bg: #000;
            --card-bg: #111;
        }

        body {
            background-color: var(--dark-bg) !important;
            color: var(--neon-green);
        }

        .neon-border {
            border: 2px solid var(--neon-green);
            background-color: var(--card-bg);
            box-shadow: 0 0 15px rgba(57, 255, 20, 0.2);
        }

        .carousel-inner img {
            object-fit: contain;
            height: 400px;
        }

        .txtTenSP {
            color: var(--neon-aqua) !important;
            font-weight: bold;
            font-size: 2rem;
            text-shadow: 0 0 10px var(--neon-aqua) !important;
        }

        .text-purple {
            color: var(--neon-purple) !important;
        }

        .form-control,
        .input-group-text {
            font-weight: bold !important;
            background-color: var(--dark-bg) !important;
            color: var(--neon-green) !important;
            border: 1px solid var(--neon-green) !important;
        }

        .form-control:focus {
            font-weight: bold !important;
            color: var(--neon-aqua) !important;
            box-shadow: 0 0 10px var(--neon-aqua) !important;
            border-color: var(--neon-aqua) !important;
        }

        .btnGioHang{
            background-color: var(--neon-green) !important;
            color: var(--dark-bg) !important;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
        }

        .btnGioHang:hover {
            background-color: var(--neon-aqua) !important;
            box-shadow: 0 0 10px var(--neon-aqua);
            border: 1px solid var(--neon-aqua) !important;
        }

        .btnMua {
            background-color: var(--neon-red) !important;
            color: var(--dark-bg) !important;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
        }

        .btnMua:hover {
            background-color: var(--neon-aqua) !important;
            box-shadow: 0 0 10px var(--neon-aqua);
            border: 1px solid var(--neon-aqua) !important;
        }

        .btnQuayLai {
            background-color: var(--neon-purple) !important;
            color: var(--dark-bg) !important;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
        }

        .btnQuayLai:hover {
            background-color: var(--neon-aqua) !important;
            box-shadow: 0 0 10px var(--neon-aqua);
            border: 1px solid var(--neon-aqua) !important;
        }
    </style>
</head>
<body>
    <!-- HEADER -->
    <%- include('header') %>

    <div class="container my-5">
        <div class="row rounded p-4 neon-border">
            <!-- Hình ảnh -->
            <div class="col-md-6">
                <% if (sanpham.HinhAnh && sanpham.HinhAnh.length > 0) { %>
                    <div id="carouselImages" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner rounded">
                            <% sanpham.HinhAnh.forEach((img, index) => { %>
                                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                    <img src="<%= img %>" class="d-block w-100" alt="Ảnh sản phẩm">
                                </div>
                            <% }) %>
                        </div>
                        <% if (sanpham.HinhAnh.length > 1) { %>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselImages" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon"></span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselImages" data-bs-slide="next">
                                <span class="carousel-control-next-icon"></span>
                            </button>
                        <% } %>
                    </div>
                <% } else { %>
                    <img src="/images/placeholder.jpg" class="img-fluid rounded" alt="Không có ảnh">
                <% } %>
            </div>

            <!-- Thông tin sản phẩm -->
            <div class="col-md-6">
                <h3 class="txtTenSP mb-3 text-info"><%= sanpham.TenSanPham %></h3>

                <ul class="list-unstyled mb-4 fs-6">
                    <li><span class="fw-bold text-warning">Hãng:</span> <span class="text-purple"><%= sanpham.HangSanXuat?.TenHangSanXuat %></span></li>
                    <li><span class="fw-bold text-warning">Phân loại:</span> <span class="text-purple"><%= sanpham.PhanLoai?.TenPhanLoai %></span></li>
                    <li><span class="fw-bold text-warning">Tỷ lệ:</span> <span class="text-purple"><%= sanpham.TyLe %></span></li>
                    <li><span class="fw-bold text-warning">Chất liệu:</span> <span class="text-purple"><%= sanpham.ChatLieu %></span></li>
                    <li><span class="fw-bold text-warning">Màu sắc:</span> <span class="text-purple"><%= sanpham.MauSac %></span></li>
                    <li><span class="fw-bold text-warning">Tồn kho:</span> <span class="text-purple"><%= sanpham.SoLuong %> sản phẩm</span></li>
                    <li><span class="fw-bold text-warning">Mô tả:</span> <span class="text-purple"><%= sanpham.MoTa %></span></li>
                </ul>

                <h4 class="text-danger mb-3"><%= sanpham.Gia.toLocaleString('vi-VN') %>₫</h4>

                <!-- Ô nhập số lượng -->
                <div class="input-group w-50 mb-3">
                    <% if (!user || (user.QuyenHan !== 'Nhân viên' && user.QuyenHan !== 'Admin')) { %>
                        <span class="input-group-text">Số lượng</span>
                        <input id="soLuongInput" type="number" min="1" max="<%= sanpham.SoLuong %>" value="1" class="form-control" required>
                    <% } %>
                </div>

                <!-- Nút hành động -->
                <div class="d-flex gap-3">
                    <% if (!user || (user.QuyenHan !== 'Nhân viên' && user.QuyenHan !== 'Admin')) { %>
                        <a href="#" onclick="themVaoGioHang('<%= sanpham._id %>')" class="btnGioHang btn btn-success">
                            <i class="bi bi-cart-plus"></i> Thêm vào giỏ hàng
                        </a>
                    <% } %>

                    <a href="/sanpham" class="btnQuayLai btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- FOOTER -->
    <%- include('footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- SCRIPT THÔNG BÁO -->
    <script>
        function themVaoGioHang(idSanPham) {
            const soLuong = document.getElementById("soLuongInput").value;

            if (soLuong <= 0) {
                alert("❌ Vui lòng nhập số lượng hợp lệ.");
                return;
            }

            fetch(`/giohang/them/${idSanPham}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ soLuongMua: soLuong })
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    alert("✅ Đã thêm vào giỏ hàng!");
                } else {
                    alert("❌ Thêm vào giỏ hàng thất bại!");
                }
            })
            .catch(err => {
                console.error(err);
                alert("⚠️ Có lỗi xảy ra khi thêm vào giỏ hàng!");
            });
        }
    </script>

</body>
</html>
