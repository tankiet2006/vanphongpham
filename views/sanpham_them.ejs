<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thêm sản phẩm</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        :root {
            --neon-green: #39FF14;
            --neon-aqua: #00FFFF;
            --neon-yellow: #FFEE32;
            --neon-red: #FF073A;
            --dark-bg: #000;
            --card-bg: #111;
            --text-light: #EEE;
        }
        
        body {
            background-color: var(--dark-bg);
            color: var(--neon-green);
        }

        .text-aqua {
            color: var(--neon-aqua) !important;
            text-shadow: 0 0 8px var(--neon-aqua);
        }
        
        .border-neon {
            border-color: var(--neon-aqua) !important;
            opacity: 0.7;
        }
        
        /* Form Styles */
        .form-container {
            background-color: var(--card-bg);
            border: 1px solid var(--neon-green);
            border-radius: 5px;
            padding: 30px;
            box-shadow: 0 0 15px rgba(57, 255, 20, 0.2);
        }
        
        .form-title {
            color: var(--neon-aqua);
            text-shadow: 0 0 5px var(--neon-aqua);
            border-bottom: 1px solid var(--neon-green);
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

        .form-label{
            color: var(--neon-yellow) !important;
        }
        
        .form-control, .form-select {
            background-color: var(--dark-bg) !important;
            color: var(--neon-aqua) !important;
            border: 1px solid var(--neon-green) !important;
        }
        
        .form-control:focus, .form-select:focus {
            box-shadow: 0 0 10px var(--neon-aqua);
            border-color: var(--neon-aqua) !important;
        }
        
        /* Button Styles */
        .btn {
            border: 1px solid var(--neon-green) !important;
            color: var(--dark-bg) !important;
            background-color: var(--neon-green) !important;
            transition: all 0.3s;
        }
        
        .btnLuu:hover {
            background-color: var(--neon-aqua) !important;
            box-shadow: 0 0 10px var(--neon-aqua);
            border: 1px solid var(--neon-aqua) !important;
        }

        .btnHuyBo:hover {
            background-color: var(--neon-red) !important;
            box-shadow: 0 0 10px var(--neon-red);
            border: 1px solid var(--neon-red) !important;
        }
    </style>
</head>
<body>
    <!-- INCLUDE HEADER -->
    <%- include('header') %>

    <!-- INCLUDE NAVBAR -->
    <%- include('navbar') %>

    <!-- MAIN CONTENT -->
    <div class="container my-3">
        <div class="row mb-2">
            <div class="col">
                <h2 class="text-aqua"><i class="bi bi-box-seam"></i> Thêm sản phẩm mới</h2>
                <hr class="border-neon">
            </div>
        </div>

        <form action="/sanpham/them" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="TenSanPham" class="form-label">Tên sản phẩm</label>
                <input type="text" class="form-control" id="TenSanPham" name="TenSanPham" required>
            </div>

            <div class="mb-3">
                <label for="HangSanXuat" class="form-label">Hãng sản xuất</label>
                <select class="form-select" id="HangSanXuat" name="HangSanXuat" required>
                    <option value="">-- Chọn hãng sản xuất --</option>
                    <% hangsanxuat.forEach(h => { %>
                        <option value="<%= h._id %>"><%= h.TenHangSanXuat %></option>
                    <% }); %>
                </select>
            </div>

            <div class="mb-3">
                <label for="PhanLoai" class="form-label">Phân loại</label>
                <select class="form-select" id="PhanLoai" name="PhanLoai" required>
                    <option value="">-- Chọn phân loại --</option>
                    <% phanloai.forEach(p => { %>
                        <option value="<%= p._id %>"><%= p.TenPhanLoai %></option>
                    <% }); %>
                </select>
            </div>

            <div class="mb-3">
                <label for="TyLe" class="form-label">Tỷ lệ</label>
                <input type="text" class="form-control" id="TyLe" name="TyLe" required>
            </div>

            <div class="mb-3">
                <label for="ChatLieu" class="form-label">Chất liệu</label>
                <input type="text" class="form-control" id="ChatLieu" name="ChatLieu" required>
            </div>

            <div class="mb-3">
                <label for="MauSac" class="form-label">Màu sắc</label>
                <input type="text" class="form-control" id="MauSac" name="MauSac" required>
            </div>

            <div class="mb-3">
                <label for="SoLuong" class="form-label">Số lượng</label>
                <input type="number" class="form-control" id="SoLuong" name="SoLuong" required>
            </div>

            <div class="mb-3">
                <label for="MoTa" class="form-label">Mô tả</label>
                <textarea class="form-control" id="MoTa" name="MoTa" rows="3" required></textarea>
            </div>

            <div class="mb-3">
                <label for="Gia" class="form-label">Giá</label>
                <input type="number" class="form-control" id="Gia" name="Gia" required>
            </div>

            <div class="mb-3">
                <label for="HinhAnh" class="form-label">Hình ảnh</label>
                <input type="file" class="form-control" id="HinhAnh" name="HinhAnh[]" accept="image/*" multiple required>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-4">
                <a href="/sanpham" class="btn btnHuyBo">Hủy bỏ</a>
                <button type="submit" name="luu" class="btn btnLuu">
                    <i class="bi bi-save"></i> Lưu sản phẩm
                </button>
            </div>
        </form>
    </div>

    <!-- INCLUDE FOOTER -->
    <%- include('footer') %>
</body>
</html>